<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
	<context:annotation-config/>

	<!-- Definition for student1 bean -->
	<bean id="student1" class="com.springexamples.Student">
		<property name="name" value="Anatoli"/>
		<property name="age" value="20"/>
	</bean>
	
	<!-- Definition for student2 bean -->
	<bean id="student2" class="com.springexamples.Student">
		<property name="name" value="Zdravko"/>
		<property name="age" value="36"/>
	</bean>
	
	<!-- Definition for Profile bean  -->
	<bean id="profile" class="com.springexamples.Profile">
	</bean>

</beans>